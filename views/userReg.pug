doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title User Registration Form
    link(rel='stylesheet', href='/public/css/userReg.css')
  body
    form(action='/signup' method="POST")
      .container
        h1 Register
        p Please fill in this form to create an account.
        hr
        label(for='email')
          b Email
        input#email(type='text', placeholder='Enter Email', name='email')
        label(for='psw')
          b Password
        label(for='role')
          b Role
        input#role(type='text', placeholder='Enter your role', name='role')
        label(for='psw')
          b Password
        input#psw(type='text', placeholder='Enter Password', name='password')
        label(for='psw-repeat')
          b Repeat Password
        input#psw-repeat(type='password', placeholder='Repeat Password', name='psw-repeat')
        hr
        p
          | By creating an account you agree to our
          a(href='#') Terms &amp; Privacy
          | .
        button.registerbtn(type='submit') Register
      .container.signin
        p
          | Already have an account? 
          a(href='#') Sign in
          | .